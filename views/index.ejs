<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/nav.ejs') %>
  <div class="container">
    <hr>
    <h1 class="text-white text-center">QUESTIONS</h1>
    <hr>
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <hr>
    <% perguntas.forEach(pergunta => { %>
      <div class="card mb-3">
        <div class="card-body">
          <h3 class="text-secondary"><%= pergunta.titulo %></h3>
        </div>
        <div class="card-footer">
          <a href="/pergunta/<%= pergunta.id  %> "><button class="btn btn-warning">Responder</button></a>
        </div>
      </div>
    <% }) %> 
  </div>
</body>
<%- include('partials/footer.ejs') %>