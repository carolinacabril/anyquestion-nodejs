<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/nav.ejs') %>
  <div class="container">
    <hr>
    <h1 class="text-white"><%= pergunta.titulo %> </h1>
    <p><%= pergunta.descricao %> </p>
    <hr>
    <form action="/responder" method="POST">
      <h3 class="text-white">Responda</h3>
      <label>Resposta</label>
      <textarea name="corpo" placeholder="Digite a sua resposta" class="form-control"></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
      <button type="submit" class="btn btn-warning mt-3">Responder</button>
    </form>
    <hr>
    <h3 class="text-white">Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
      <div class="card mb-3">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer.ejs') %>